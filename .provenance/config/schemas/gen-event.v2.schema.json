{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "provenancecode.gen.v2.schema",
  "title": "ProvenanceCode GEN Event v2",
  "type": "object",
  "required": [
    "schema",
    "gen_id",
    "bundle_id",
    "adapter_id",
    "trigger",
    "timestamp",
    "session_id",
    "agent",
    "change",
    "links",
    "risk",
    "integrity"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "provenancecode.gen.v2"
    },
    "gen_id": {
      "type": "string",
      "pattern": "^GEN-(?:[A-Z0-9]{2,4}-[A-Z0-9]{2,4}-\\d{6}|\\d{6})$"
    },
    "bundle_id": {
      "type": "string",
      "minLength": 3
    },
    "adapter_id": {
      "type": "string",
      "minLength": 3
    },
    "trigger": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "session_id": {
      "type": "string",
      "minLength": 6
    },
    "agent": {
      "type": "object",
      "required": [
        "platform",
        "adapter_id"
      ],
      "properties": {
        "platform": {
          "type": "string",
          "enum": [
            "github-copilot",
            "cursor",
            "unknown"
          ]
        },
        "adapter_id": {
          "type": "string",
          "minLength": 3
        }
      }
    },
    "change": {
      "type": "object",
      "required": [
        "tool_name",
        "tool_args_hash",
        "tool_result_hash",
        "cwd"
      ],
      "properties": {
        "tool_name": {
          "type": "string",
          "minLength": 1
        },
        "tool_args_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "tool_result_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "cwd": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "links": {
      "type": "object",
      "required": [
        "decision_ids",
        "spec_ids"
      ],
      "properties": {
        "decision_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^DEC-(?:[A-Z0-9]{2,4}-[A-Z0-9]{2,4}-\\d{6}|\\d{6})$"
          }
        },
        "spec_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^SPEC-(?:[A-Z0-9]{2,4}-[A-Z0-9]{2,4}-\\d{6}|\\d{6})$"
          }
        }
      }
    },
    "risk": {
      "type": "object",
      "required": [
        "triggered",
        "rationale",
        "matched_paths"
      ],
      "properties": {
        "triggered": {
          "type": "boolean"
        },
        "rationale": {
          "type": "string"
        },
        "matched_paths": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "integrity": {
      "type": "object",
      "required": [
        "hashing",
        "input_hash",
        "capture"
      ],
      "properties": {
        "hashing": {
          "type": "string",
          "const": "sha256"
        },
        "input_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "capture": {
          "type": "string",
          "const": "hashes-only"
        }
      }
    }
  }
}
