{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "provenancecode.spec.v2.schema",
  "title": "ProvenanceCode Specification v2",
  "type": "object",
  "required": [
    "schema",
    "spec_id",
    "title",
    "status",
    "risk",
    "acceptance_criteria",
    "affected_paths",
    "related_decisions",
    "timestamps"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "provenancecode.spec.v2"
    },
    "spec_id": {
      "type": "string",
      "pattern": "^SPEC-(?:[A-Z0-9]{2,4}-[A-Z0-9]{2,4}-\\d{6}|\\d{6})$"
    },
    "title": {
      "type": "string",
      "minLength": 5
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "review",
        "approved",
        "implemented",
        "rejected"
      ]
    },
    "risk": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 3
      }
    },
    "affected_paths": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "related_decisions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^DEC-(?:[A-Z0-9]{2,4}-[A-Z0-9]{2,4}-\\d{6}|\\d{6})$"
      }
    },
    "timestamps": {
      "type": "object",
      "required": [
        "created_at"
      ],
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
