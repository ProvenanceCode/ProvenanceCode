{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "provenancecode.decision.v2.schema",
  "title": "ProvenanceCode Decision v2",
  "type": "object",
  "required": [
    "schema",
    "decision_id",
    "title",
    "status",
    "context",
    "decision",
    "consequences",
    "risk",
    "review",
    "timestamps"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "provenancecode.decision.v2"
    },
    "decision_id": {
      "type": "string",
      "pattern": "^DEC-(?:[A-Z0-9]{2,4}-[A-Z0-9]{2,4}-\\d{6}|\\d{6})$"
    },
    "project": {
      "type": "object",
      "required": [
        "code",
        "name"
      ],
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[A-Z0-9]{2,4}$"
        },
        "name": {
          "type": "string",
          "minLength": 2
        }
      }
    },
    "subproject": {
      "type": "object",
      "required": [
        "code",
        "name"
      ],
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[A-Z0-9]{2,4}$"
        },
        "name": {
          "type": "string",
          "minLength": 2
        }
      }
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 160
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "review",
        "approved",
        "accepted",
        "rejected",
        "superseded"
      ]
    },
    "context": {
      "type": "object",
      "required": [
        "problem"
      ],
      "properties": {
        "problem": {
          "type": "string",
          "minLength": 10
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "decision": {
      "type": "string",
      "minLength": 10
    },
    "consequences": {
      "type": "string",
      "minLength": 10
    },
    "links": {
      "type": "object",
      "properties": {
        "pr": {
          "type": "string",
          "minLength": 3
        },
        "events": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^GEN-(?:[A-Z0-9]{2,4}-[A-Z0-9]{2,4}-\\d{6}|\\d{6})$"
          }
        },
        "specs": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^SPEC-(?:[A-Z0-9]{2,4}-[A-Z0-9]{2,4}-\\d{6}|\\d{6})$"
          }
        }
      }
    },
    "risk": {
      "type": "object",
      "required": [
        "score",
        "rationale"
      ],
      "properties": {
        "score": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        },
        "rationale": {
          "type": "string",
          "minLength": 10
        }
      }
    },
    "review": {
      "type": "object",
      "required": [
        "human"
      ],
      "properties": {
        "human": {
          "type": "string",
          "minLength": 3
        }
      }
    },
    "timestamps": {
      "type": "object",
      "required": [
        "created_at"
      ],
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
